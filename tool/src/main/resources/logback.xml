<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Package-specific logger for RDAP conformance tool -->
    <!-- This allows setting logging level for org.icann.rdapconformance package independently -->
    <logger name="org.icann.rdapconformance" level="${logging.level.org.icann.rdapconformance:-${defaultLogLevel:-ERROR}}" additivity="true"/>

    <!-- Support both logLevel and logging.level.root properties, with verbose-aware default -->
    <root level="${logging.level.root:-${logLevel:-${defaultLogLevel:-ERROR}}}">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>